https://blogs.sap.com/2014/06/08/authorization-of-user-privilege-on-sap-hana-modeler-development/

GRANT EXECUTE ON REPOSITORY_REST to B1ADMIN;

GRANT REPO.READ ON _SYS_REPO."repo" TO B1ADMIN;

GRANT REPO.EDIT_NATIVE_OBJECTS ON _SYS_REPO."repo" TO B1ADMIN;

GRANT REPO.ACTIVATE_NATIVE_OBJECTS ON _SYS_REPO."repo" TO B1ADMIN;

GRANT REPO.MAINTAIN_NATIVE_PACKAGES ON _SYS_REPO."repo" TO B1ADMIN;

GRANT SELECT ON SCHEMA "OTHER_SCHEMA" TO B1ADMIN;

GRANT SELECT ON SCHEMA OTHER_SCHEMA TO _SYS_REPO WITH GRANT OPTION;

GRANT SELECT ON SCHEMA _SYS_BIC TO B1ADMIN;

GRANT SELECT ON SCHEMA _SYS_BI TO B1ADMIN;

CALL GRANT_ACTIVATED_ANALYTICAL_PRIVILEGE('_SYS_BI_CP_ALL','B1ADMIN')

