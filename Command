//import database
IMPORT "SBODEMOBR"."*" AS BINARY FROM '/hana/shared/backup_service/backups/SBODEMOBR' WITH IGNORE EXISTING THREADS 10 RENAME SCHEMA "SBODEMOBR" TO "SBODEMOBR_";
Export "SBODEMOBR"."*" as binary INTO '/hana/shared/backup_service/backups/SBODEMOBR' WITH REPLACE
export "SBODEMOBR"."*" as binary into '/hana/shared/backup_service/backups/SBODEMOBR with no dependencies threads 20;


//check length schema
select SUM(DISK_SIZE/1024/1024/1024) GB  from M_TABLE_PERSISTENCE_STATISTICS where SCHEMA_NAME = 'SBODEMOBR'

